<!doctype html>
<html lang="en">
  <head>
    <meta charset="UTF-8"/>
    <title>Uwspółcześniona Biblia Gdańska</title>
    <style>
      {% include "style.css" %}
    </style>
  </head>
  <body>
    <ul class="books">
      {% for book in books %}
        <li>
          <a href="/{{ book.encoded_name }}/1"
             title="{{ book.full_name }}"
             data-nof-chapters="{{ book.nof_chapters }}"
             data-encoded-name="{{ book.encoded_name }}">
            {{ book.short_name }}
          </a>
        </li>
      {% endfor %}
    </ul>

    <div class="chapters-menu">
      <a href="" class="back-button">&laquo; back</a>
      <span class="book-name">{{ chapter.book_name }}}}</span>
    </div>

    <ul class="chapters"></ul>

    <div class="chapter-container">
          {% include "chapter.dtl" %}
    </div>
    
    <div class="flash-message"><span>Skopiowano</span></div>

    <script>
      {% include "scripts.js" %}
     </script>

    <style>
      {% include "interlinear-link.css" %}
    </style>
  </body>
</html>
